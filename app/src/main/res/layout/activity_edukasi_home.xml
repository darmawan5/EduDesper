<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".edukasi_home">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvedu_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgedu_home"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/eduhome"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/tvedu_home"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:layout_below="@+id/imgedu_home"
            android:text="Apa sih Disleksia itu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
            <Button
                android:id="@+id/btnlanjut_home"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/buttonrounded"
                android:text="Lanjut"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnkembali_home"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/buttonrounded"
                android:text="Kembali"
                android:textColor="@android:color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>